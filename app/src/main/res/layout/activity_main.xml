<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".MainActivity">

    <androidx.appcompat.widget.SearchView
        android:id="@+id/search"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:translationX="40dp"
        android:translationY="100dp"></androidx.appcompat.widget.SearchView>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/purple_500"
        android:text="Я попал в ДТП. Что делать?"
        android:textAppearance="@style/TextAppearance.AppCompat.Large"
        android:translationX="70dp"
        android:translationY="180dp" />

    <Button
        android:id="@+id/button_for_DTP_car"
        android:layout_width="116dp"
        android:layout_height="wrap_content"
        android:backgroundTint="#FF5722"
        android:text="НА МАШИНЕ"
        android:translationX="70dp"
        android:translationY="230dp" />

    <Button
        android:id="@+id/button_for_DTP_kik"
        android:layout_width="126dp"
        android:layout_height="wrap_content"
        android:backgroundTint="#FF5722"
        android:text="НА САМОКАТЕ"
        android:translationX="230dp"
        android:translationY="230dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/purple_500"
        android:text="Вопросы по ПДД для"
        android:textAppearance="@style/TextAppearance.AppCompat.Large"
        android:translationX="105dp"
        android:translationY="300dp"/>

    <Button
        android:id="@+id/button_for_PDD_car"
        android:layout_width="116dp"
        android:layout_height="wrap_content"
        android:backgroundTint="#FF5722"
        android:text="МАШИНЫ"
        android:translationX="70dp"
        android:translationY="340dp"/>

    <Button
        android:id="@+id/button_for_PDD_kik"
        android:layout_width="126dp"
        android:layout_height="wrap_content"
        android:backgroundTint="#FF5722"
        android:text="САМОКАТА"
        android:translationX="230dp"
        android:translationY="340dp" />

    <Button
        android:id="@+id/button_for_kikshering"
        android:layout_width="274dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="Кикшеринг"
        android:translationX="10dp"
        android:translationY="130dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/button_for_PDD_car" />

    <Button
        android:id="@+id/button7"
        android:layout_width="277dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="Формы претензий"
        android:translationX="10dp"
        android:translationY="190dp"
        tools:layout_editor_absoluteX="10dp"
        tools:layout_editor_absoluteY="130dp" />

    <Button
        android:id="@+id/button8"
        android:layout_width="273dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="Общение с инспектором"
        android:translationX="10dp"
        android:translationY="70dp"
        tools:layout_editor_absoluteX="10dp"
        tools:layout_editor_absoluteY="190dp" />

    <include
        layout="@layout/content_layout2"
        android:foreground="@drawable/ic_launcher_background" />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="56dp"
        android:layout_height="57dp"
        android:layout_gravity="bottom|right"
        android:translationX="-10dp"
        android:translationY="-10dp"
        android:background="@color/first"
        app:srcCompat="@android:drawable/stat_sys_speakerphone" />
</FrameLayout>